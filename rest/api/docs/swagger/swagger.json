    "definitions": {
        "api.Response": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "api.TransactionRequest": {
            "type": "object",
            "properties": {
                "tx": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "api.TransactionsRequest": {
            "type": "object",
            "properties": {
                "txs": {
                    "type": "array",
                    "items": {
                        "type": "\u0026{%!s(token.Pos=410) \u003cnil\u003e byte}"
                    }
                }
            }
        }
    }
